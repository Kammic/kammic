<table class="table table-striped table-hover table-responsive table-condensed">
  <tr>
    <th>#</th>
    <th>Book</th>
    <th>Branch</th>
    <th>Revision</th>
    <th>Commit Message</th>
    <th>Author</th>
    <th>Started</th>
    <th>Status</th>
  </tr>
  <% @builds.each do |build| %>
  <tr>
    <td> <%= link_to build.id, build_path(build) %> </td>
    <td> <%= build.book.repo.name %> </td>
    <td> <%= build.book.repo.master_branch %> </td>
    <td> <%= build.revision && build.revision[1..10] %> </td>
    <td> <%= build.commit_message %> </td>
    <td> <%= build.author %> </td>
    <td> <%= time_ago_in_words(build.started_at) %> ago</td>
    <td> <%= build_status(build.status) %> </td>
  </tr>
  <% end %>
</table>
<%= will_paginate @builds, renderer: BootstrapPagination::Rails %>
