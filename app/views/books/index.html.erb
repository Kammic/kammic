<table class="table table-striped table-hover table-responsive table-condensed">
  <tr>
    <th>Book Name</th>
    <th>Description</th>
    <th class="centered">Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td class='no-wrap'>
        <%= link_to book.repo.name, book_path(book[:id]) %>
      </td>
      <td><%= book.repo.description %></td>
      <td class="centered">
        <%= link_to 'Editor', repo_editor_path(book.repo[:name]), class: 'btn btn-primary btn-xs' %>
        <%= link_to 'Unfollow', book_path(book), method: :delete , class: 'btn btn-danger btn-xs'  %>
      </td>
    </tr>
  <% end %>
</table>
