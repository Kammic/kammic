<table class="table table-striped table-hover table-responsive table-condensed">
  <tr>
    <th>Book Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.repo.name %></td>
      <td><%= book.repo.description %></td>
      <td>
        <%= link_to 'Editor', repo_editor_path(book.repo[:name]), class: 'btn btn-primary btn-sm' %>
      </td>
      <td>
        <%= link_to 'Builds', repo_build_path(book.repo[:name]), class: 'btn btn-primary btn-sm' %>
      </td>
      <td>
        <%= link_to 'Remove', book_path(book), method: :delete , class: 'btn btn-danger btn-sm'  %>
      </td>
    </tr>
  <% end %>
</table>
