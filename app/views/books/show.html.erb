<div class="row row-offcanvas row-offcanvas-right">
  
  <div class="col-sm-9">
    <% if @book.manifest %>
    <div class="row">
      <div class="col-sm-5">
        <%= book_image(@book) %>
      </div>
      <div class="col-sm-7">
        <div class="page-header">
          <h1><%= @book.manifest.title %></h1>
        </div>
        <div class="row">
          <%= book_pages @book.manifest.pages %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  

  <div class="col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
    <%= refresh_manifest_button(@book) %>
  </div>

</div>
