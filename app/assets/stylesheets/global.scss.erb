@import "font-awesome";

body.global {
  font-family: "proxima-nova",sans-serif;
  font-size: 1.5em;

  .container {
    max-width: none;
    background-color: #222;
    padding: 0px;
  }

  .content.left {
    color: #fff;
    padding-top: 1.5em;
    padding-left: 0.5em;
    padding-right: 0.5em;

    .center {
      text-align: center;
    }

    .repo-count {
      border-bottom: 1px solid #AAA;
    }

    .follow-count {
      border-bottom: 1px solid #AAA;
    }

    .actions {
      margin-top: 1em;
    }
  }

  .content.right {
    background-color: #fff;
    padding: 1.5em;
  }
}





