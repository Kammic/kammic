@import "font-awesome";

body.global {
  font-family: "proxima-nova",sans-serif;
  font-size: 1.5em;
  background: url(<%= asset_path('bg-header.png') %>) 0 0 repeat-x #eceef3;

  .navbar.fixed-top  {
    border:none;
    top: 0;
    background-color: transparent;
    color: #fff;
    font-family: "adelle";

    .brand a, .brand a:hover {
      color: #fff;
      font-size: 2.0em;
      padding-top: 1.5em;
    }

    a, a:visited, a:active{
      color: #fff;
    }

    a:hover { color: #000 }

    .avatar {
      height: 1em;
      border-radius: 90px;
    }

    li {
      margin-top: 2.0em;
    }
  }

  .container {
    .content {
      margin-top: -1em;
      padding: 1em;
      background-color: #fff;
      // border: 1px solid rgba(0, 0, 0, 0.15);
      -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
    }

    .refresh-button {
      margin-bottom: 1em;
    }

    .table {
      .no-wrap, th { white-space: nowrap; }
      .centered { text-align: center; }
    }
  }

  .cover {
    width: 300px;
  }  
}





